# Day 36 - Stock News Monitor
# Rename this file to .env and add your API keys

# Stock to monitor
STOCK_SYMBOL=TSLA
COMPANY_NAME=Tesla Inc
PRICE_CHANGE_THRESHOLD=5.0   # Alert if price changes by this % or more

# Alpha Vantage API (for stock prices)
# Get free key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# NewsAPI (for company news)
# Get free key: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key

# Twilio (for SMS alerts - optional)
# Get credentials: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_FROM=
TWILIO_PHONE_TO=

# Email (alternative to SMS)
EMAIL_USER=
EMAIL_PASS=
TO_EMAIL=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
USE_TLS=true
FROM_NAME=Stock Monitor

# Behavior
DRY_RUN=true
USE_SMS=false           # true for SMS, false for email
MAX_NEWS_ARTICLES=3     # Number of articles to include in alert
